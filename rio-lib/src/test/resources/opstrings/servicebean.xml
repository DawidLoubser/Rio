<?xml version="1.0" encoding="ISO-8859-1" standalone="no"?>
<!DOCTYPE opstring PUBLIC "-/RIO//DTD" "http://www.rio-project.org/dtd/rio_opstring.dtd">
<opstring>
    <OperationalString Name="ServiceBean Example">
        <Groups>
            <Group>rio</Group>
        </Groups>

        <!-- Declare attributes for the Hello example -->
        <ServiceBean Name="Hello">
            <Interfaces>
                <Interface>servicebean.Hello</Interface>
                <Resources>
                    <JAR>servicebean/lib/servicebean-dl.jar</JAR>
                </Resources>
            </Interfaces>
            <ImplementationClass Name="servicebean.service.HelloImpl">
                <Resources>
                    <JAR>servicebean/lib/servicebean.jar</JAR>
                </Resources>
            </ImplementationClass>

            <Maintain>1</Maintain>
        </ServiceBean>
    </OperationalString>
</opstring>


