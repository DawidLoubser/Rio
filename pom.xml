        <module>webster</module>
        <module>services</module>
        <module>tools</module>
        <module>rio-test</module>
        <module>examples</module>
        <module>distribution</module>
  </modules>

    <properties>
        <rio.version>4.1-SNAPSHOT</rio.version>
